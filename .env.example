# CipherWave Production Configuration
# Copy this file to .env and customize the values for your deployment

# Server Configuration
NODE_ENV=production
PORT=52178
HOST=0.0.0.0

# Room and Connection Limits
MAX_ROOM_SIZE=2
MAX_CONNECTIONS_PER_IP=5
SESSION_TIMEOUT=1800000

# Security Configuration
MAX_MESSAGE_SIZE=65536
ENABLE_AUTH=false
JWT_SECRET=your-super-secure-jwt-secret-here-change-this
AUTH_TOKEN_EXPIRY=86400000

# Rate Limiting and DDoS Protection
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
DDOS_PROTECTION_THRESHOLD=1000

# Clustering (for production scalability)
ENABLE_CLUSTERING=true
NUM_WORKERS=4

# CORS and Origin Control
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# TURN Server Configuration (optional)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Database Configuration (for persistent sessions - optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/cipherwave

# Redis Configuration (for session storage in clustered mode - optional)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Performance Tuning
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_PONG_TIMEOUT=5000
CONNECTION_HEALTH_CHECK_INTERVAL=10000

# Development Settings (not used in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false