{
  "name": "cipherwave",
  "version": "2.0.0",
  "description": "A modern, decentralized, anonymous, peer-to-peer messenger with end-to-end encryption and Telegram-like UI",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start-node": "node node-host.js",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "nodemon server.js",
    "dev-client": "vite",
    "dev-node": "nodemon node-host.js",
    "build": "vite build",
    "build-web": "vite build",
    "preview": "vite preview",
    "cap-build": "npm run build && npx cap build",
    "cap-sync": "npm run build && npx cap sync",
    "open-android": "npx cap open android",
    "open-ios": "npx cap open ios",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "messaging",
    "encryption",
    "decentralized",
    "anonymous",
    "telegram",
    "modern-ui",
    "secure-chat"
  ],
  "author": "CipherWave Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/ios": "^6.1.2",
    "@capacitor/splash-screen": "^6.0.2",
    "@capacitor/status-bar": "^6.0.1",
    "ws": "^8.18.0",
    "uuid": "^10.0.0",
    "libsodium-wrappers": "^0.7.15",
    "simple-peer": "^9.11.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-legacy": "^5.4.2",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "concurrently": "^9.0.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jsdom": "^25.0.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.5",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.0.5",
    "workbox-window": "^7.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raccoon-warez/cipherwave"
  },
  "bugs": {
    "url": "https://github.com/raccoon-warez/cipherwave/issues"
  },
  "homepage": "https://github.com/raccoon-warez/cipherwave#readme"
}
